/*********************************************************************************/
/* Basic                                                                         */
/*********************************************************************************/

	body 
	{
		min-width: 1000px;
		font-size: 9.5pt;
	}

	.social-icon
	{
		height: 28px;
	}

	.button
	{
	}	
	
		.button:after
		{
			right: -0.9em;
		}
		
		.button.big:after
		{
			right: -0.975em;
		}

/*********************************************************************************/
/* Wrappers                                                                      */
/*********************************************************************************/

	#banner-wrapper,
	#main-wrapper,
	#footer-wrapper,
	.wrapper-featured
	{
		padding: 4em 0 4em 0;
	}

/*********************************************************************************/
/* Logo                                                                          */
/*********************************************************************************/

	#logo
	{
	}
	
		#logo h1:after
		{
			bottom: -1.99em;
		}

/*********************************************************************************/
/* Banner                                                                        */
/*********************************************************************************/

	#banner
	{
	}

		#banner h2
		{
			margin-top: 1.2em;
		}

/*********************************************************************************/
/* Copyright                                                                     */
/*********************************************************************************/

	#copyright 
	{
	}
	
		#copyright span
		{
			margin: 3em 0 0 0;
		}