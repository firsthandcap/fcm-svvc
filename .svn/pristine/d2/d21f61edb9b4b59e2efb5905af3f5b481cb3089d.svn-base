/*********************************************************************************/
/* Slider                                                                        */
/*********************************************************************************/

	#slider
	{
		width: 300px;
		height: 168px;
		float: none;
		position: relative;
		left: 50%;
		margin-left: -150px;
		background: url('images/monitor-frame.png') no-repeat center top;
		background-size: 100%;
	}
	
		#slider .viewer
		{
			top: 10px;
			width: 230px;
			margin: 0px auto;
		}
	
			#slider .viewer .reel
			{
				display: none;
			}
	
			#slider .viewer .reel .slide
			{
			}

				#slider .viewer .reel .slide img
				{
					width: 100%;
				}
				
				#slider .viewer .reel .slide .link
				{
					width: 100%;
					height: 100%;
					display: block;
					position: absolute;
					left: 0;
					top: 0;
					text-indent: -9999px;
					z-index: 1000;
				}